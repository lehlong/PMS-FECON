                @Html.MyButton("cmdAdd", "Báo cáo thực hiện hợp đồng khách hàng", string.Format("Forms.LoadAjax('{0}');", @Url.Action("CustomerContractIndex", "Report", new { projectId = Model.ObjDetail.ID })), "Alt+N", "sort")
            </div>
