@model SMO.Service.PS.ProjectService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
}
<div class="card" id="@Model.ViewId">
    <div class="body" style="padding-top: 30px;">
        @if (AuthorizeUtilities.CheckUserRight("R5.8") || AuthorizeUtilities.CheckUserRight("R00"))
        {
            <div class="m-b-5">
                @Html.MyButton("cmdAdd", "Báo cáo tổng hợp dự án", string.Format("Forms.LoadAjax('{0}');", @Url.Action("SummaryProjectIndex", "Report", new {projectId = Model.ObjDetail.ID})), "Alt+N", "sort")
            </div>
        }

        @if (AuthorizeUtilities.CheckUserRight("R5.9") || AuthorizeUtilities.CheckUserRight("R00"))
        {
            <div class="m-b-5">
                @Html.MyButton("cmdAdd", "Báo cáo kiểm soát chi phí dự án", string.Format("Forms.LoadAjax('{0}');", @Url.Action("ProjectCostControlIndex", "Report", new { projectId = Model.ObjDetail.ID })), "Alt+N", "sort")
