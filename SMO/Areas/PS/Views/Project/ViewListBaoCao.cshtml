        }

        @if (AuthorizeUtilities.CheckUserRight("R5.5") || AuthorizeUtilities.CheckUserRight("R00"))
        {
            <div class="m-b-5">
                @Html.MyButton("cmdAdd", "Xuất dữ liệu chi tiết dự án (chi phí)", string.Format("Forms.LoadAjax('{0}');", @Url.Action("ProjectDetailDataCostIndex", "Report", new { projectId = Model.ObjDetail.ID })), "Alt+N", "sort")
            </div>
        }
    </div>
</div>

