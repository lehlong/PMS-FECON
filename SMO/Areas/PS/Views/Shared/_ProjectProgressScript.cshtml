<script>
    function TrinhDuyet(data) {
        Swal.fire({
            title: 'Trình duyệt dữ liệu?',
            text: "Bạn có chắc muốn trình duyệt dữ liệu này không?",
            icon: 'warning',
            showCancelButton: true,
            input: 'text',
            inputPlaceholder: 'Ý kiến',
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Trình duyệt',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                Forms.ShowLoading();
                var ajaxParams = {
                    url: '@Url.Action("TrinhDuyet", "Project")',
                    type: "POST",
                    data: {
                        ...data,
                        note: result.value
                    },
                    dataType: 'json',
                    success: function (response) {
                        Message.execute(response);
                    }
                };
                Forms.Ajax(ajaxParams)
            }
        })

    }
