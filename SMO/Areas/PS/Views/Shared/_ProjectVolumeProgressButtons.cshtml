    default:
        @*if (
            (!isCustomer && modul == "Work" && AuthorizeUtilities.CheckUserRightProject("RP6.1", projectId)) ||
            (isCustomer && modul == "Work" && AuthorizeUtilities.CheckUserRightProject("RP8.1", projectId)) ||
