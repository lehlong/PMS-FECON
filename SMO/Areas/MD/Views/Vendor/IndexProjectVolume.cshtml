@model SMO.Service.MD.VendorService
@{ 
    var controller = Model.IsAccept ? "VolumeAccept" : "VolumeWork";
    //var htmlTarget = Model.IsAccept ? "accept-volume" : "action-volume";
}
<div class="p-t-10">
    @Html.MyButton("cmdHome", "Thông tin dự án", string.Format("$(\"#close-vendor\").click();"), "Alt+N", "arrow_back")
</div>
<div class="m-t-20">
    
    <span class="m-r-10">DANH SÁCH NHÀ THẦU PHỤ TRONG DỰ ÁN</span>
    <div class="table-responsive m-t-10">
        <table class="table table-condensed table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Tên ngắn gọn</th>
                    <th>Mã số thuế</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ObjList)
                {
                    var vdbclickAction = $"Forms.LoadAjax({{url: '{Url.Action("UpdateTimesIndex", controller, new { @area = "PS", isCustomer = false, partnerCode = item.CODE, projectId = Model.ProjectId })}' }});";
                    <tr>
                        <td ondblclick="@vdbclickAction">
                            <a href="#" onclick="@vdbclickAction">@item.CODE</a>
                        </td>
                        <td ondblclick="@vdbclickAction">@item.NAME</td>
                        <td ondblclick="@vdbclickAction">@item.SHORT_NAME</td>
                        <td ondblclick="@vdbclickAction">@item.MST</td>
                        <td ondblclick="@vdbclickAction">@item.EMAIL</td>
                        <td ondblclick="@vdbclickAction">@item.PHONE</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
