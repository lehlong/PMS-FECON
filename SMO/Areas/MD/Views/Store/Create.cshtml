
@model SMO.Service.MD.StoreService
@{
    Model.ViewId = Guid.NewGuid().ToString();
    Model.FormId = Guid.NewGuid().ToString();
    var frmFormCode = "frmStoreCreate";
}
<div id='@Model.ViewId'  class="container-fluid child-content">
    @using (Ajax.BeginForm("Create", null, FormDataUtils.GetAjaxOptions(Model.ViewId), new { @id = Model.FormId }))
    {
        <div class="card">
            <div class="body" style="padding-top: 0px;">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a style="padding-left:0px"><i class="material-icons">clear_all</i> TẠO MỚI KHO</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="page-function">
                        <div class="page-function-button m-r-20">
                            @Html.MyButton("cmdBack", LanguageUtilities.LangControl("cmdBack", frmFormCode), string.Format("Forms.Close('{0}');", @Model.ViewId), "Alt+N", "arrow_back")
                            @Html.MyButton("cmdSave", LanguageUtilities.LangControl("cmdSave", frmFormCode), string.Format("Forms.SubmitForm('{0}');", @Model.FormId), "Alt+N", "done_all")
                            @Html.MyButton("cmdLanguage", "Ngôn ngữ", string.Format("Forms.MaintainLanguageForm('{0}');", frmFormCode), "Cập nhật ngôn ngữ của form", "language")
                        </div>
                    </div>

                    <div class="row m-t-20">
                        <div class="col-xs-1"></div>
                        <div class="col-lg-5 col-xs-10">
                            <label>@LanguageUtilities.LangText("lbl_CODE", frmFormCode)</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.CODE)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.CODE)
                            </div>

                            <label>@LanguageUtilities.LangText("lbl_TEXT", frmFormCode)</label>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.MyTextBoxFor(m => m.ObjDetail.TEXT)
                                </div>
                                @Html.ValidationMessageFor(m => m.ObjDetail.TEXT)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    <script type="text/javascript">
        $(function () {
            Forms.CompleteUI();
        });
    </script>
</div>
